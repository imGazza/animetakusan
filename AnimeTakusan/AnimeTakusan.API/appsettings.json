{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Expressions",
      "Serilog.Settings.Configuration",
      "Serilog.Exceptions.EntityFrameworkCore"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithExceptionDetails"
    ],
    "WriteTo:Console": {
      "Name": "Console",
      "Args": {
        "outputTemplate": "{LocalTime:HH:mm:ss.fff} - {EnvironmentName} - [{Level:u3}] {Message:lj}{NewLine}{Exception}"
      }
    },
    "WriteTo:BusinessLogger": {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "Filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "Contains(SourceContext, 'AnimeTakusan.API')"
              }
            }
          ],
          "WriteTo:File": {
            "Name": "File",
            "Args": {
              "path": "logs/anime-takusan/business/.log",
              "rollingInterval": "Day",
              "retainedFileCountLimit": 7,
              "shared": true,
              "outputTemplate": "{LocalTime:HH:mm:ss.fff} - {EnvironmentName} - [{Level:u3}] {Message:lj}{NewLine}{Exception}"
            }
          }
        }
      }
    },
    "WriteTo:ExternalLogger": {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "Filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "Contains(SourceContext, 'AnimeTakusan.External')"
              }
            }
          ],
          "WriteTo:File": {
            "Name": "File",
            "Args": {
              "path": "logs/anime-takusan/external/.log",
              "rollingInterval": "Day",
              "retainedFileCountLimit": 7,
              "shared": true,
              "outputTemplate": "{LocalTimeHH:mm:ss.fff} - {EnvironmentName} - [{Level:u3}] {Message:lj}{NewLine}{Exception}"
            }
          }
        }
      }
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "https://animetakusan.eu",
    "https://www.animetakusan.eu"
  ]
}